<component type="desktop">
	<id>net.bartkessels.simpleconvert.desktop</id>
	<metadata_licence>CC0</metadata_licence>
	<project_license>GPL-3.0+</project_license>
	<name>SimpleConvert</name>
	<summary>Easily convert multiple files</summary>
	<translation type="gettext">simpleconvert</translation>

	<description>
		<p>
			SimpleConvert is a small application to convert video and/or
			audio files to any filetype using ffmpeg.
		</p>
		<p>	
           SimpleConvert aims to provide an easy to understand interface so
           everyone will be able to use the power of ffmpeg.
       </p>
	</description>

	<launchable type="desktop-id">net.bartkessels.simpleconvert.desktop</launchable>

	<screenshots>
		<screenshot type="default">
			<caption>Main screen of SimpleConvert</caption>
			<image width="848" height="505">https://github.com/bartkessels/simpleconvert/raw/master/data/screenshots/mainwindow.png</image>
		</screenshot>
		<screenshot>
			<caption>SimpleConvert when converting files</caption>
			<image width="848" height="505">https://github.com/bartkessels/simpleconvert/raw/master/data/screenshots/mainwindow_converting.png</image>
		</screenshot>
	</screenshots>

	<url type="homepage">https://github.com/bartkessels/simpleconvert</url>
	<developer_name>Bart Kessels</developer_name>
	<update_contact>bartkessels_AT_bk-mail.com</update_contact>

	<languages>
		<lang percentage="100%">en_US</lang>
		<lang percentage="100%">nl_NL</lang>
	</languages>

	<provides>
		<binary>simpleconvert</binary>
	</provides>

