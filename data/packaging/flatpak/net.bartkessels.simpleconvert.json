{
	"app-id": "net.bartkessels.simpleconvert",
	"runtime": "org.gnome.Platform",
	"runtime-version": "3.24",
	"sdk": "org.gnome.Sdk",
	"command": "simpleconvert",
	"finish-args": [
		"--socket=x11",
		"--share=ipc",
		"--socket=wayland",
		"--filesystem=home",
		"--filesystem=xdg-run/dconf",
		"--filesystem=~/.config/dconf:ro",
		"--talk-name=ca.desrt.dconf",
		"--env=DCONF_USER_CONFIG_DIR=.config/dconf"
	],
	"build-options": {
		"cflags": "-O2 -g",
		"cxxflags": "-O2 -g",
		"env": {
			"V": "1"
		}
	},
	"cleanup": [
		"/include",
		"/lib/pkgconfig",
		"/man",
		"/share/doc",
		"/share/gtk-doc",
		"/share/mand",
		"/share/pkgconfig",

		"*.la",
		"*.a"
	],
	"modules": [
		{
			"name": "ffmpeg",
			"buildsystem": "make",
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"branch": "release/3.4",
					"url": "https://github.com/FFmpeg/FFmpeg"
				}
			]
		},
		{
			"name": "simpleconvert",
			"buildsystem": "meson",
			"builddir": true,
			"sources": [
				{
					"type": "git",
					"branch": "stable",
					"url": "https://github.com/bartkessels/simpleconvert"
				}
			]
		}
	]
}
