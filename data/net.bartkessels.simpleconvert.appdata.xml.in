<component type="desktop">
	<id>net.bartkessels.simpleconvert.desktop</id>
	<metadata_licence>CC0</metadata_licence>
	<project_license>GPL-3.0+</project_license>
	<_name>Simple Convert</_name>
	<_summary>Easily convert multiple files</_summary>
	<translation type="gettext">simpleconvert</translation>

	<description>
		<_p>
			Convert multiple files at once using an easy to use
			interface. Simple Convert uses FFMPEG to convert the files.
		</_p>
	</description>

	<launchable type="desktop-id">net.bartkessels.simpleconvert.desktop</launchable>

	<screenshots>
		<screenshot type="default">
			<caption>Main screen of Simple Convert</caption>
			<image width="624" height="351">https://github.com/bartkessels/simpleconvert/raw/master/data/screenshots/mainwindow.png</image>
		</screenshot>
	</screenshots>

	<url type="homepage">https://github.com/bartkessels/simpleconvert</url>
	<developer_name>Bart Kessels</developer_name>
	<update_contact>bartkessels_AT_bk-mail.com</update_contact>

	<languages>
		<lang percentage="100%">en_US</lang>
		<lang percentage="100%">nl_NL</lang>
	</languages>

	<provides>
		<binary>simpleconvert</binary>
	</provides>

	<releases>
		<release version="2.0" date="2018-02-14">
			<p>This release fixed/added:</p>
			<ul>
				<li>Update converting thread</li>
				<li>Update appstream translation</li>
			</ul>
		</release>

		<release version="1.3" date="2018-01-19">
			<description>
				<p>This release fixed/added:</p>
				<ul>
					<li>Fix possible crash when input file doesn't exist</li>
					<li>Add option to remove file from list when done converting</li>
				</ul>
			</description>
		</release>
		<release version="1.2" date="2017-12-22">
			<description>
				<p>This release fixed/added:</p>
				<ul>
					<li>Add notification support</li>
					<li>Ship own add and remove icons</li>
				</ul>
			</description>
		</release>

		<release version="1.1" date="2017-12-22">
			<description>
				<p>This release fixed/added:</p>
				<ul>
					<li>Add window for managing settings</li>
				</ul>
			</description>
		</release>

		<release version="1.0" date="2017-12-21" />
	</releases>

</component>
